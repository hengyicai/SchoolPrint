<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.objectFactory.spring.autoWire" value="name"></constant>

	
	<include file="strutsShop.xml"></include>
	<include file="struts_UserOperate.xml"></include>
	
	
	<package name="shop" extends="struts-default" >
		<action name="getShopList" class="com.schoolo2o.action.ShopAction"
			method="getAllShops">
		</action>
		<!-- 请求店铺详情 -->
		<action name="getShopDetail" class="com.schoolo2o.action.ShopAction"
			method="getShopByName" >
			<result name="success">
				/shopHome.jsp
			</result>
		</action>
	
	</package>
</struts>    
